<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/iv_doctor_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/drawable_oval_placeholder_light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_doctor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/dark_text_welcome"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_doctor_status"
        app:layout_constraintStart_toEndOf="@id/iv_doctor_image"
        app:layout_constraintTop_toTopOf="@id/iv_doctor_image"
        tools:text="Dr. Sarah Johnson" />

    <TextView
        android:id="@+id/tv_doctor_speciality"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/medium_gray_text_welcome"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_doctor_status"
        app:layout_constraintStart_toEndOf="@id/iv_doctor_image"
        app:layout_constraintTop_toBottomOf="@id/tv_doctor_name"
        tools:text="Orthodontist" />

    <TextView
        android:id="@+id/tv_doctor_experience"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/medium_gray_text_welcome"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_doctor_image"
        app:layout_constraintEnd_toStartOf="@+id/tv_doctor_status"
        app:layout_constraintStart_toEndOf="@id/iv_doctor_image"
        app:layout_constraintTop_toBottomOf="@id/tv_doctor_speciality"
        tools:text="15 years experience" />

    <TextView
        android:id="@+id/tv_doctor_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="12dp"
        android:paddingBottom="6dp"
        android:textSize="12sp"
        android:textColor="@color/dark_text_welcome"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/drawable_status_available_bg"
        tools:text="Available" />

</androidx.constraintlayout.widget.ConstraintLayout>